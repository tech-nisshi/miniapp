 <div class="row">
      <div class="col s12 m6 offset-m3">
        <div class="card">
          <div class="card-content deep-orange-text">
            <p><%= tweet.text %></p>
          </div>
          <% if user_signed_in? && tweet.user_id == current_user.id %>
          <div class="card-action">
            <%= link_to 'edit', "/tweets/#{tweet.id}/edit", method: :get %>
            <%= link_to 'delete', "/tweets/#{tweet.id}", method: :delete %>
          </div>
          <% end %>
        </div>
      </div>
    </div>